<h1><%= @list.name %></h1>
<%= link_to 'Index', lists_path, { class: 'btn btn-primary' }  %>
<%= link_to 'Add a movie', new_list_bookmark_path(@list), { class: 'btn btn-success' }  %>
<div class="container">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="row">
      <div class="card-poster col-3">
        <%= image_tag bookmark.movie.poster_url, alt: "movie", width: 200, height: 300 %>
      </div>
      <div class="card-info col-8">
        <h2><%= bookmark.movie.title %></h2>
        <p><%= bookmark.movie.overview %></p>
        <p><%= bookmark.movie.rating %></p>
        <p><%= bookmark.comment %></p>
        <%= link_to bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Do you want to delete #{bookmark.movie.title} from the list?"} do %>
          <i class="fa-solid fa-trash-can"></i>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
