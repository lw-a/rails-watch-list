<div class="container">
  <h1>Lists</h1>
  <%= link_to 'New List', new_list_path, { class: 'btn btn-primary' }%>
  <% @lists.each do |list|  %>
    <div class="card">
      <div class="card-info">
        <h2><%= link_to list.name, list_path(list), { class: 'btn btn-success' }%></h2>
      </div>
    </div>
  <% end %>
</div>
